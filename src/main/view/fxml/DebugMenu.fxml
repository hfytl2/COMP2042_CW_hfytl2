<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<GridPane fx:id="debugroot" stylesheets="@../css/DebugMenu.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
	<Button fx:id="skiplevel" contentDisplay="CENTER" prefWidth="234.0" text="Skip Level" GridPane.columnIndex="0">
		<cursor>
			<Cursor fx:constant="HAND"/>
		</cursor>
	</Button>
	<Button fx:id="resetballs" contentDisplay="CENTER" prefWidth="234.0" text="Reset Balls" GridPane.columnIndex="1">
		<cursor>
			<Cursor fx:constant="HAND"/>
		</cursor>
	</Button>
	<HBox styleClass="hbox" GridPane.columnSpan="2" GridPane.rowIndex="1">
		<Text styleClass="text" text="Ball Speed"/>
	</HBox>	
	<Slider fx:id="ballspeedslider" blockIncrement="5.0" majorTickUnit="10.0" min="-100.0" minorTickCount="1" showTickLabels="true" showTickMarks="true" snapToTicks="true" GridPane.columnSpan="2" GridPane.rowIndex="2">
		<cursor>
			<Cursor fx:constant="H_RESIZE"/>
		</cursor>
     </Slider>
</GridPane>
